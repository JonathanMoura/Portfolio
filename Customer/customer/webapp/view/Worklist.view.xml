<mvc:View
    controllerName="customer.controller.Worklist"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:semantic="sap.f.semantic"
>
    <semantic:SemanticPage
        id="page"
        headerPinnable="false"
        toggleHeaderOnTitleClick="false"
    >
        <semantic:titleHeading>
            <Title
                text="{i18n>worklistTitle}"
                level="H2"
            />
        </semantic:titleHeading>

        <semantic:content>
            <Table
                id="table"
                width="auto"
                mode="Delete"
                delete="onClienteDelete"
                items="{
                    path: '/ClienteSet',
                    sorter: {
                        path: 'ClienteID',
                        descending: false
                    }
                }"
                noDataText="{worklistView>/tableNoDataText}"
                busyIndicatorDelay="{worklistView>/tableBusyDelay}"
                growing="true"
                growingScrollToLoad="false"
                growingThreshold="20"
                updateFinished=".onUpdateFinished"
            >
                <headerToolbar>
                    <OverflowToolbar>
                        <Title
                            id="tableHeader"
                            text="{worklistView>/worklistTableTitle}"
                            level="H3"
                        />
                        <ToolbarSpacer />
                        <Button text="Criar" press="onCriarCliente"></Button>                        
                        <Button text="Ordenar" press="onSortItens"></Button>
                        <Button text="Buscar" press="onPressBuscar"></Button>
                        <SearchField
                            id="searchField"
                            tooltip="{i18n>worklistSearchTooltip}"
                            search=".onSearch2"
                        >
                            <layoutData>
                                <OverflowToolbarLayoutData
                                    maxWidth="200px"
                                    priority="NeverOverflow"
                                />
                            </layoutData>
                        </SearchField>
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column>
                        <Text text="CÃ³digo" />
                    </Column>
                    <Column hAlign="End">
                        <Text text="Nome" />
                    </Column>
                    <Column hAlign="End">
                        <Text text="UF" />
                    </Column>
                    <Column hAlign="End">
                        <Text text="Status" />
                    </Column>
                    <Column hAlign="End">
                        <Text text="Change status" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem
                        type="Navigation"
                        press=".onPress"
                    >
                        <cells>
                            <ObjectIdentifier title="{ClienteID}" />
                            <ObjectIdentifier title="{Nome}" />
                            <ObjectIdentifier title="{UF}" />
                            <ObjectIdentifier title="{Status}" />
                            <Button icon="sap-icon://synchronize" press="onAlterarStatus"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </semantic:content>
    </semantic:SemanticPage>
</mvc:View>
